<% provide(:title, 'Contact Us') %>

<div class="mdl-layout__content" style="margin-left:25%;overflow:hidden;">

	<form accept-charset="UTF-8" action="/sent" method="post" style="padding-top:70px;">

		<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">

		<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label textfield-demo" style="">
			<input class="mdl-textfield__input" name="name" type="text" id="name" />
			<label class="mdl-textfield__label" for="name">Name</label>
		</div> <br>

		<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label textfield-demo" style="">
			<input class="mdl-textfield__input" name="email" type="email" id="email" />
			<label class="mdl-textfield__label" for="email">E-mail</label>
		</div> <br>

		<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label textfield-demo" style="">
			<input class="mdl-textfield__input" name="subject" type="text" id="subject" />
			<label class="mdl-textfield__label" for="name">Subject</label>
		</div> <br>

		<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label textfield-demo" style="">
			<textarea class="mdl-textfield__input" rows="5" name="body" type="text" id="body"></textarea>
			<label class="mdl-textfield__label" for="body">Your message</label>
		</div> <br>

		<button type="submit" class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored">
		  Submit
		</button>

	</form>

</div>